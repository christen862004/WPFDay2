<Window x:Class="WPFDay2.Shape"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WPFDay2"
        
        Title="Shape" Height="450" Width="800">
    <Viewbox>
        <Canvas Height="450" Width="800">
            <Rectangle Width="100" Height="100" 
                       Fill="BlueViolet"
                       Stroke="YellowGreen"
                       StrokeThickness="10"
                       Canvas.Left="150"
                       Canvas.Top="150"
                       Panel.ZIndex="1"
                       MouseEnter="Rectangle_MouseEnter"
                       ></Rectangle>
            <Ellipse Width="100" Height="100" Fill="LightGreen"
                     Stroke="Green"
                     StrokeThickness="10"
                     Canvas.Left="100"
                     Canvas.Top="100"
                     x:Name="el1"
                     MouseEnter="Ellipse_MouseEnter"></Ellipse>
        </Canvas>
    </Viewbox>
</Window>
